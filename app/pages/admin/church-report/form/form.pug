md-dialog.user-form-page(flex="95", flex-md="70", flex-lg="50")
  form(md-form-validator='', ng-submit="$ctrl.submit()", name="$ctrl.form")
    md-toolbar(flex="none")
      div.md-toolbar-tools
        h2 {{::$ctrl.model.id ? 'Editar' : 'Adicionar'}} Relatório
        span(flex='')
        md-button.md-icon-button(ng-click='$ctrl.cancel()')
          md-icon(md-svg-icon="close")

    md-dialog-content
      div.md-dialog-content
        md-input-container.md-block
          label Titulo
          input(ng-model="$ctrl.model.title", name="title", required, md-maxlength="100")
          md-messages(field="title")

        div(layout="column",layout-gt-xs="row")
          div(flex)
            md-input-container.md-block
              label Tipo
              md-select(ng-model='$ctrl.model.typeId', name="typeId", required)
                md-option(value="") Selecione...
                md-option(ng-repeat="type in $ctrl.types", ng-value='type.id')
                  | {{type.name}}
              md-messages(field="typeId")

          div(flex)
            md-input-container.md-block
              label Data
              input(ng-model="$ctrl.model.date", name="date", required, datepicker)
              md-messages(field="date")

        div(layout="row", layout-wrap='')
          div(flex="100", flex-gt-xs="50", flex-gt-md="25")
            md-input-container.md-block
              label Total de Membros
              input(ng-model="$ctrl.model.totalMembers", name="totalMembers", required, type='number', min="0")
              md-messages(field="totalMembers")

          div(flex="100", flex-gt-xs="50", flex-gt-md="25")
            md-input-container.md-block
              label Total de Visitantes
              input(ng-model="$ctrl.model.totalNewVisitors", name="totalNewVisitors", required, type='number', min="0")
              md-messages(field="totalNewVisitors")

          div(flex="100", flex-gt-xs="50", flex-gt-md="25")
            md-input-container.md-block
              label Total de Frequentadores
              input(ng-model="$ctrl.model.totalFrequentVisitors", name="totalFrequentVisitors", required, type='number', min="0")
              md-messages(field="totalFrequentVisitors")

          div(flex="100", flex-gt-xs="50", flex-gt-md="25")
            md-input-container.md-block
              label Total de Crianças
              input(ng-model="$ctrl.model.totalKids", name="totalKids", required, type='number', min="0")
              md-messages(field="totalKids")

    md-dialog-actions(layout='row')
      md-button(ng-click="$ctrl.cancel()")
        | Cancelar
      span(flex='')
      md-button.md-primary.md-raised(type="submit")
        | Salvar